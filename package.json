{
	"name": "grzesiek110.story",
	"displayName": "TestStory",
	"description": "TestStory is editior for scrum stories with acceptance criteria as e2e tests",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "story",
				"extensions": [
					".story"
				],
				"aliases": [
					"TestStory story"
				],
				"configuration": "./domains/story/editor/story.language-configuration.json"
			},
			{
				"id": "rules",
				"extensions": [
					".rules"
				],
				"aliases": [
					"TestStory rules"
				],
				"configuration": "./domains/rules/editor/rules.language-configuration.json"
			}			
		],
		"grammars": [
			{
				"language": "story",
				"scopeName": "source.story",
				"path": "./src/domains/story/editor/story.tmLanguage.json"
			},
			{
				"language": "rules",
				"scopeName": "source.rules",
				"path": "./src/domains/rules/editor/rules.tmLanguage.json"
			}			
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"grammar-story": "antlr4ts -o src/domains/story/grammar/parser -visitor ./src/domains/story/grammar/Story.g4",
		"grammar-rules": "antlr4ts -o src/domains/rules/grammar/parser -visitor ./src/domains/rules/grammar/Rules.g4"
	},
	"dependencies": {
		"antlr4": "4.7.2",
		"antlr4ts": "0.5.0-alpha.3"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"@types/antlr4": "^4.7.0",
		"antlr4ts-cli": "0.5.0-alpha.3",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
